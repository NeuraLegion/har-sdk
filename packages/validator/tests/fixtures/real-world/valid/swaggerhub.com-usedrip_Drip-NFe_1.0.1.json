{
  "openapi": "3.1.0",
  "info": {
    "title": "Invoice uploader",
    "description": "Endpoint to upload merchant's invoice for every order approved by Drip.",
    "version": "1.0.1"
  },
  "servers": [
    {
      "url": "https://rgcqz988gj.execute-api.us-east-1.amazonaws.com/v1/file-processor",
      "description": "Sandbox"
    },
    { "url": "https://api.usedrip.com.br/file/v1", "description": "Production" }
  ],
  "paths": {
    "/upload/nf": {
      "post": {
        "summary": "Upload invoice file and data",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "orderCode": {
                    "type": "string",
                    "description": "Order identifier"
                  },
                  "nota": {
                    "type": "string",
                    "format": "binary",
                    "description": "Invoice file"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "File uploaded successfully" },
          "400": { "$ref": "#/components/responses/BadRequest" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "properties": { "message": { "type": "string" } }
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Invalid request",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" }
          }
        }
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": { "type": "apiKey", "in": "header", "name": "X-API-KEY" }
    }
  },
  "security": [{ "ApiKeyAuth": [] }]
}
