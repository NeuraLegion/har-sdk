{
  "name": "@neuralegion/har-sdk",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NeuraLegion/har-sdk.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "author": {
    "name": "Artem Derevnjuk",
    "email": "artem.derevnjuk@neuralegion.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NeuraLegion/har-sdk/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "dist/**"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "lerna": "lerna",
    "semantic-release": "semantic-release",
    "lint": "eslint -c .eslintrc.js 'packages/**/*.ts'",
    "format": "prettier --check 'packages/**/*.ts'",
    "test": "cross-env TS_NODE_PROJECT=./tsconfig.spec.json mocha -r ts-node/register -r tsconfig-paths/register tests/**/*.spec.ts",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "release": "npm run build && lerna publish from-package --contents dist --force-publish",
    "prepare": "is-ci || husky install"
  },
  "homepage": "https://github.com/NeuraLegion/har-sdk#readme",
  "dependencies": {
    "tslib": "~2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/chai": "^4.2.16",
    "@types/chai-as-promised": "^7.1.3",
    "@types/debug": "^4.1.5",
    "@types/mocha": "~8.2.2",
    "@types/node": "~14.14.40",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "~4.3.4",
    "chai-as-promised": "~7.1.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "debug": "^4.3.1",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^6.0.0",
    "is-ci": "^2.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "~8.3.2",
    "nyc": "~15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
