  "components": {
    "schemas": {
      "Customer": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "uuid": {
            "type": "string",
            "example": "5387cef3-bb2e-4508-92a5-6d41d987c963"
          },
          "name": { "type": "string", "example": "Иванов Иван Иванович" },
          "reservedByUserID": {
            "type": "string",
            "example": "5387cef3-bb2e-4508-92a5-6d41d987c963"
          }
        }
      },
      "Customers": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/Customer" }
      },
      "User": {
        "type": "object",
        "required": ["name", "role"],
        "properties": {
          "uuid": {
            "type": "string",
            "example": "5387cef3-bb2e-4508-92a5-6d41d987c963"
          },
          "name": { "type": "string", "example": "Иванов Иван Иванович" },
          "role": { "type": "string", "enum": ["Admin", "Manager", "Support"] }
        }
      },
      "Users": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/User" }
      },
      "CommunicationChannel": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "id": { "type": "integer", "format": "int64", "example": 42 },
          "type": {
            "type": "string",
            "enum": ["SMS", "Phone", "Email", "Push", "Messenger"]
          },
          "description": {
            "type": "string",
            "example": "Текстовые СМС-сообщения (макс. 160 символов)"
          }
        }
      },
      "CommunicationChannels": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/CommunicationChannel" }
      },
      "CustomerChannel": {
        "type": "object",
        "required": [
          "customerUuid",
          "channelId",
          "optIn",
          "channelContactInfo"
        ],
        "properties": {
          "customerUuid": {
            "type": "string",
            "example": "5387cef3-bb2e-4508-92a5-6d41d987c963"
          },
          "channelId": { "type": "integer", "format": "int64", "example": 10 },
          "optIn": { "type": "boolean", "example": true },
          "channelContactInfo": {
            "type": "string",
            "example": "+7 999 123-45-67"
          }
        }
      },
      "CustomerChannels": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/CustomerChannel" }
      },
      "Topic": {
        "type": "object",
        "required": [
          "id",
          "title",
          "description",
          "customerUuid",
          "channelId",
          "createdAt"
        ],
        "properties": {
          "id": { "type": "integer", "format": "int64", "example": 42 },
          "title": {
            "type": "string",
            "example": "Весенняя акция - скидка 10% на все товары"
          },
          "description": {
            "type": "string",
            "example": "Скидка на все товары весенней коллекции"
          },
          "customerUuid": {
            "type": "string",
            "example": "5387cef3-bb2e-4508-92a5-6d41d987c963"
          },
          "channelId": { "type": "integer", "format": "int64", "example": 10 },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2020-01-01T00:00:00Z"
          }
        }
      },
      "Topics": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/Topic" }
      },
      "TopicManager": {
        "type": "object",
        "required": [
          "id",
          "userUuid",
          "topicId",
          "unassignedSince",
          "assignedSince"
        ],
        "properties": {
          "id": { "type": "integer", "format": "int64", "example": 42 },
          "userUuid": {
            "type": "string",
            "example": "5387cef3-bb2e-4508-92a5-6d41d987c963"
          },
          "topicId": { "type": "integer", "format": "int64", "example": 10 },
          "unassignedSince": {
            "type": "string",
            "format": "date-time",
            "example": "2020-01-01T00:00:00Z"
          },
          "assignedSince": {
            "type": "string",
            "format": "date-time",
            "example": "2020-01-01T00:00:00Z"
          }
        }
      },
      "TopicManagers": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/TopicManager" }
      },
      "Message": {
        "type": "object",
        "required": [
          "id",
          "text",
          "topicId",
          "senderUuid",
          "status",
          "timestamp"
        ],
        "properties": {
          "id": { "type": "integer", "format": "int64", "example": 42 },
          "text": {
            "type": "string",
            "example": "Здравствуйте! Как я могу помочь?"
          },
          "topicId": { "type": "integer", "format": "int64", "example": 10 },
          "senderUuid": {
            "type": "string",
            "example": "5387cef3-bb2e-4508-92a5-6d41d987c963"
          },
          "status": { "type": "string", "enum": ["Sent", "Delivered", "Read"] },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "example": "2020-01-01T00:00:00Z"
          }
        }
      },
      "Messages": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/Message" }
      },
      "Comment": {
        "type": "object",
        "required": ["id", "topicId", "text", "userUuid", "timestamp"],
        "properties": {
          "id": { "type": "integer", "format": "int64", "example": 42 },
          "topicId": { "type": "integer", "format": "int64", "example": 10 },
          "text": { "type": "string", "example": "Спасибо за помощь!" },
          "userUuid": {
            "type": "string",
            "example": "5387cef3-bb2e-4508-92a5-6d41d987c963"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "example": "2020-01-01T00:00:00Z"
          }
        }
      },
      "Comments": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/Comment" }
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": { "type": "apiKey", "in": "header", "name": "X-API-Key" }
    }
  }
}
