{
  "name": "har-sdk",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NeuraLegion/har-sdk.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "author": {
    "name": "Artem Derevnjuk",
    "email": "artem.derevnjuk@neuralegion.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NeuraLegion/har-sdk/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "lerna": "lerna",
    "cross-env": "cross-env",
    "husky": "husky",
    "nyc": "nyc",
    "bootstrap": "lerna bootstrap --ci",
    "semantic-release": "multi-semantic-release",
    "build": "lerna run build",
    "build:changed": "lerna run --since origin/master --include-dependents build",
    "lint": "lerna run lint",
    "lint:changed": "lerna run --since origin/master --include-dependents lint",
    "test": "lerna run test",
    "test:changed": "lerna run --since origin/master --include-dependents test",
    "coverage": "lerna run coverage",
    "coverage:all": "nyc npm t",
    "coverage:changed": "lerna run --since origin/master --include-dependents coverage",
    "format": "lerna run format",
    "format:changed": "lerna run --since origin/master --include-dependents format",
    "prepare": "is-ci || husky install"
  },
  "homepage": "https://github.com/NeuraLegion/har-sdk#readme",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@qiwi/multi-semantic-release": "^3.16.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "~9.0.0",
    "@types/node": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "chai": "~4.3.4",
    "chai-as-promised": "~7.1.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.2",
    "is-ci": "^3.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "mocha": "~9.1.1",
    "nyc": "~15.1.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "semantic-release": "^17.4.7",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
